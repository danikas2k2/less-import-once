{
    "name": "less-import-once",
    "version": "1.1.3",
    "description": "Webpack loader to removes duplicated LESS imports marked as (once)",
    "main": "index.js",
    "keywords": [],
    "author": "danikas2k2@gmail.com",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/danikas2k2/less-import-once.git"
    },
    "scripts": {
        "build": "pnpm build:dt && pnpm build:js",
        "build:dt": "tsc src/loader.ts --declaration true --emitDeclarationOnly true --outFile ./index.d.ts",
        "build:js": "esbuild src/loader.ts --bundle --minify --platform=node --packages=external --outfile=./index.js",
        "preversion": "git pull && pnpm test",
        "version": "pnpm build && git add --all && git commit -m \"$npm_package_version\"",
        "postversion": "git push && git push --tags",
        "prepublish": "pnpm test && pnpm build",
        "test": "jest"
    },
    "devDependencies": {
        "@tsconfig/node16": "^16.1.1",
        "@types/jest": "^29.5.6",
        "@types/lodash": "^4.14.200",
        "@types/node": "^20.8.8",
        "css-loader": "^6.8.1",
        "esbuild": "^0.19.5",
        "esbuild-jest": "^0.5.0",
        "jest": "^29.7.0",
        "less": "^4.2.0",
        "less-loader": "^11.1.3",
        "lodash": "^4.17.21",
        "memfs": "^4.6.0",
        "prettier": "^3.0.3",
        "typescript": "^5.2.2",
        "unionfs": "^4.5.1",
        "webpack": "^5.89.0"
    }
}
